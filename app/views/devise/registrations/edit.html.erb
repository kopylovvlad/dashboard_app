<%= content_for :jumbotron do %>
  <h2>Edit profile</h2>
<% end %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|%>

  <div class="form-group">
    <label>Email</label>
    <%= f.input :email, required: true, autofocus: true, label: false, input_html: { class: 'form-control' } %>
    <%- if devise_mapping.confirmable? && resource.pending_reconfirmation?%>
      <%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email)%>
    <% end %>
  </div>

  <div class="form-group">
    <label>First name</label>
    <%= f.input :first_name, required: true, autofocus: true, label: false, input_html: { class: 'form-control' }%>
  </div>

  <div class="form-group">
    <label>Last name</label>
    <%= f.input :last_name, required: true, autofocus: true, label: false, input_html: { class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to t("devise.shared.links.back"), :back %>
